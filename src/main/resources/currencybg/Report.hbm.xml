<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
 <hibernate-mapping>
    <class name="net.vexelon.currencybg.srv.db.models.Report" table="cbg_reports" catalog="currencybg">
        <id name="id" type="java.lang.Integer">
            <column name="ID" />
            <generator class="identity" />
        </id>
        <property name="createdOn" type="date">
            <column name="createdon" not-null="true" unique="true" />
        </property>
        <property name="message" type="string">
            <column name="message" length="65535" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>
 
