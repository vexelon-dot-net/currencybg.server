<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
 <hibernate-mapping>
    <class name="net.vexelon.currencybg.srv.db.models.CurrencyData" table="cbg_currencies" catalog="currencybg">
        <id name="id" type="java.lang.Integer">
            <column name="ID" />
            <generator class="identity" />
        </id>
        <property name="code" type="string">
            <column name="CODE" length="3" not-null="true" unique="true" />
        </property>
        <property name="ratio" type="java.lang.Integer">
            <column name="RATIO" length="11" not-null="true" unique="true" />
        </property>
        <property name="buy" type="string">
            <column name="BUY" length="10" not-null="true" unique="true" />
        </property>
        <property name="sell" type="string">
            <column name="SELL" length="10" not-null="true" unique="true" />
        </property>
        <property name="date" type="timestamp">
            <column name="DATE" not-null="true" unique="true" />
        </property>
        <property name="source" type="java.lang.Integer">
            <column name="SOURCE" length="3" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>